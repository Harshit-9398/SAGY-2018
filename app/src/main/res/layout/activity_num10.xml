<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.sagy.num2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradientbackground">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="51dp"
                    android:background="@drawable/sas1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:text="Sasikala Pushpa"
                    android:textColor="#fff"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"


                android:layout_marginTop="178dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Office"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rajya Sabha"
                                android:textColor="@color/starblue"
                                android:textSize="15sp"

                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Adopted village"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pudupatti "
                                android:textColor="@color/starblue"
                                android:textSize="15sp"

                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_alignEnd="@+id/cardView"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/cardView"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Party"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AIADMK"
                                android:textColor="@color/starblue"
                                android:textSize="15sp"

                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout4"
                android:background="@color/graylight">

                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/relativeLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </RelativeLayout>


                    <Button
                        android:id="@+id/button9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView12"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/buttonstylegradient"
                        android:padding="10dp"
                        android:text="Click Here for Details"
                        android:textColor="#fff" />


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView13"
                        android:layout_toEndOf="@+id/relativeLayout5"
                        android:layout_toRightOf="@+id/relativeLayout5"
                        android:drawableLeft="@drawable/email13"
                        android:padding="10dp"
                        android:text="Email:sasi2k@yahoo.com"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView11"
                        android:layout_marginEnd="27dp"
                        android:layout_marginRight="27dp"
                        android:drawableLeft="@drawable/phone"
                        android:padding="10dp"
                        android:text="Contact Number:9500022999"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button9"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:background="#3DDAD7">

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_alignEnd="@+id/button10"
                        android:layout_alignRight="@+id/button10"
                        android:layout_below="@+id/relativeLayout5"
                        android:drawableLeft="@drawable/address"
                        android:padding="10dp"
                        android:text="Local Address:51A/68, Palani Road West, Thoothukudi-628 008"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relativeLayout6"
                        android:layout_centerHorizontal="true"
                        android:text="Sasikala Pushpa"
                        android:textColor="#135589"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button10"
                        android:layout_below="@+id/textView10"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/buttonstylegradient"
                        android:text="For more Detrails Click Here"
                        android:textColor="#fff" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>


